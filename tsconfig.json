{
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "src/*.web.ts"
  ],
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020",
      "ESNext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDirs": [
      "./src",
      "./test"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}